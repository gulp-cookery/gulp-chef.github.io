/* main styles */
@require 'nib'
@require 'jeet'

global-reset()

html, body {
  height: 100%;
  width: 100%;
}

body {
  font-family: "Open Sans", sans-serif;
  font-weight: 400;
  font-size: 14px/1.5;

  color: #333;
  background-color: #fff;

  -webkit-text-size-adjust: 100%;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
  font-feature-settings: 'liga', 'kern';
}

.navbar {
  /* jeet layout */
  col(1/1)
  align(horizontal)
  padding-top: 30px;

  a {
    color: inherit;
    text-decoration: none;
    -webkit-tap-highlight-color: transparent;
    transition: opacity .2s linear;
    transform: translateX(50%);
    margin-bottom: 0;
    font-size: 16px;
    font-weight: 300;
    line-height: 1;

    &:focus, &:active {
	  /* nib opacity */
      opacity: .5;
    }
  }

  .navbar-title {
    display: none;
    position: static;
    float: left;
    left: 50%;
  }

  .navbar-links {
    /* jeet layout */
    center()

    .navbar-link {
      padding: 0 15px;
      border-right: 1px solid rgba(255, 255, 255, 0.3);

      &:last-child {
        border-right: none;
      }
    }
  }
}

.main-header {
  height: 100%;
  width: 100%;
  min-height: 450px;
  color: #fff;
  text-align: center;
  background-color: #cf4646;
}

.main-header-content {
  /* jeet layout */
  align()
}

.logo {
  font-family: 'Damion', cursive;
  font-size: 7rem;;
}

.main-header-text {
  width: 90vw;
  animation: fadein 2s;
  margin-bottom: 60px;
  font-size: 41px;
  font-weight: 300;
  line-height: 60px;
}

.main-header-btn {
  transition: all 0.4s;
  color: inherit;
  padding: 15px 20px 16px;
  vertical-align: top;
  cursor: pointer;
  border: 1px solid #fff;
  border-radius: 3px;
  text-decoration: none;
  -webkit-tap-highlight-color: transparent;
  animation: fadein 2s;
  text-shadow: none;
  color: #333;
  background-color: #fff;
  font-size: 22px;

  &:hover {
    box-shadow: 0 0 50px rgba(255,255,255,.3);
  }
}

.main-info {
  /* jeet layout */
  center(max-width: 1024px)
  background-color: #fff;
}

.benefits {
  /* jeet layout */
  col(1/1)
  center(max-width: 1024px)

  padding: 0 50px;
  margin: 100px 0 100px 0;

  .benefit {
    margin: 50px;

    @media screen and (min-width: 700px) {
      /* jeet layout */
      col(1/2, cycle: 2)
    }

    @media screen and (max-width: 700px) {
      /* jeet layout */
      col(1/2, cycle: 4)
      stack()

      float: left;
    }

    .benefit-title {
      margin-bottom: 14px;
      font-size: 22px;
      font-weight: 500;
    }

    .benefit-text {
      color: #7f8c8d;
      font-size: 16px;
      line-height: 26px;
    }
  }
}

.sample {
  min-height: 150px;

  .sample-code {
    /* jeet layout */
    col(1/2)

    font-size: 16px;
    line-height: 18px;

    code {
      border-radius: 2px;
    }

    @media screen and (max-width: 768px) {
	  /* jeet layout */
      stack()
    }
  }

  .sample-text {
    /* jeet layout */
    col(1/2)

    margin-bottom: 1.5em;
    font-size: 18px;
    line-height: 20px;
    color: #555;

    @media screen and (max-width: 768px) {
      /* jeet layout */
      stack(0, center)
    }
  }
}

@keyframes fadein {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
